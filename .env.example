# HXL Cloud 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 应用环境
APP_ENV=development
APP_DEBUG=true
APP_PORT=8080

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
DB_DATABASE=hxl_cloud

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT密钥
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 文件存储配置
STORAGE_TYPE=local

# 阿里云OSS配置（如果使用OSS）
OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET_NAME=your_bucket_name
OSS_DOMAIN=https://your-domain.com

# AWS S3配置（如果使用S3）
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET=your_s3_bucket
S3_ENDPOINT=

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=noreply@hxlcloud.com

# 前端URL（生产环境CORS配置）
FRONTEND_URL=https://your-frontend-domain.com

# 微信小程序配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key

# 短信服务配置
SMS_PROVIDER=aliyun
SMS_ACCESS_KEY=your_sms_access_key
SMS_SECRET_KEY=your_sms_secret_key
SMS_SIGN_NAME=your_sms_sign_name

# 监控和日志
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/hxl-cloud/app.log

# 安全配置
ENCRYPTION_KEY=your-32-character-encryption-key
API_RATE_LIMIT=100

# 第三方API密钥
# 根据实际使用的服务添加相应配置
# THIRD_PARTY_API_KEY=your_api_key
# THIRD_PARTY_API_SECRET=your_api_secret